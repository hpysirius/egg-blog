<%-include("header.ejs")%>
<body>
<%-include("nav.ejs")%>
<div id="main">

<section id="page-index">
  <% data.list.forEach((item, index) => { %>
  <article class="post">
    <div class="meta">
      <div>
          <span class="author">
            <%- item.author %>
          </span>
          <span>发布于</span>
        <span class="date"> <%- item.updated_at %></span>
      </div>
    </div>

    <h1 class="title">
      <a href="./article/detail/<%- item.id %>"><%- item.title %></a>
    </h1>

    <div class="entry-content">
      <p>分类：<%- item.article_category.name %></p>
      <p>关键字：<%- item.keywords %></p>
      <p class="more">
          <a href="./article/detail/<%- item.id %>">阅读全文 »</a>
      </p>
    </div>
  </article>
  <%})%>
  <nav class="pagination">
    <a href="/?page=2" class="next">下一页 &raquo;</a>
    <div class="center"><a href="/archives">博客归档</a></div>
  </nav>
</section>

<%-include("footer.ejs")%>
</div>
</body>
</html>

